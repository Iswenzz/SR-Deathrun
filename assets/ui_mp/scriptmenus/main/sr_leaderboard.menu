#include "ui/components/base.inc"

#define NORMAL(id, wayId, script) \
	SR_BUTTON_LEFT(id, dvarString("normal_" + wayId), scriptMenuResponse script;, when(dvarString("normal_" + wayId) != ""))
#define SECRET(id, wayId, script) \
	SR_BUTTON_LEFT(id, dvarString("secret_" + wayId), scriptMenuResponse script;, when(dvarString("secret_" + wayId) != ""))

#define ENTRIES(id, x, y) \
