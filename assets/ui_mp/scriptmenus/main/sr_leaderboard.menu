		exp             text(dvarString("leaderboard_numbers_" + id)) \
		textfont		UI_FONT_NORMAL \
		textalign		ITEM_ALIGN_LEFT \
		textscale		0.3 \
		decoration \
	} \
	itemDef \
	{ \
		visible			1 \
		rect 			((LAYOUT_X_START + x) + 25) (65 + y) 200 100 SR_ALIGN_TOP_SUBLEFT \
		forecolor		1 1 1 1 \
		exp             text(dvarString("leaderboard_names_" + id)) \
		textfont		UI_FONT_NORMAL \
		textalign		ITEM_ALIGN_LEFT \
